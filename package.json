{
    "version": "0.1.15",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test --passWithNoTests",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "deploy": "npm version patch && npm publish",
        "deploy:full": "npm run test && npm run lint && npm run build && npm run size && npm run deploy"
    },
    "peerDependencies": {
        "react": ">=16"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "swks-theme-react",
    "author": "Pablo Guilherme Leite de Souza",
    "module": "dist/swks-theme-react.esm.js",
    "description": "Uma biblioteca de gerenciamneto de temas voltada pra React",
    "size-limit": [
        {
            "path": "dist/swks-theme-react.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/swks-theme-react.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^11.0.2",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.2",
        "@types/jest": "^29.5.12",
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "husky": "^9.0.10",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "size-limit": "^11.0.2",
        "tsdx": "^0.14.1",
        "tslib": "^2.6.2",
        "typescript": "^3.9.10"
    }
}
